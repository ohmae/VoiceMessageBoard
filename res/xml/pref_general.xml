<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_screen_orientation_titles"
        android:entryValues="@array/pref_screen_orientation_values"
        android:key="SCREEN_ORIENTATION"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_screen_orientation" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="CANDIDATE_LIST"
        android:summaryOff="@string/pref_description_candidate_list_off"
        android:summaryOn="@string/pref_description_candidate_list_on"
        android:title="@string/pref_title_candidate_list" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="LIST_EDIT"
        android:dependency="CANDIDATE_LIST"
        android:summaryOff="@string/pref_description_list_edit_off"
        android:summaryOn="@string/pref_description_list_edit_on"
        android:title="@string/pref_title_list_edit" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="LONG_TAP_EDIT"
        android:summaryOff="@string/pref_desctiption_long_tap_edit_off"
        android:summaryOn="@string/pref_desctiption_long_tap_edit_on"
        android:title="@string/pref_title_long_tap_edit" />

</PreferenceScreen>